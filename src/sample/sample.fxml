<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>


<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="top_center" hgap="10" vgap="10">
    <padding>
        <Insets top="10"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="40.0"/>
        <ColumnConstraints percentWidth="15.0"/>
        <ColumnConstraints percentWidth="45.0"/>
    </columnConstraints>
    <Label text="Exceldatei zum Einlesen wählen" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="RIGHT"/>
    <Label text="Spalte mit Tabellenname" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="RIGHT"/>
    <Label text="Spalte mit Spaltenname" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="RIGHT"/>
    <Label text="Spalte mit Feldlänge" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="RIGHT"/>
    <Label text="Spalte mit Feldlänge" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="RIGHT"/>
    <Label text="Daten beginnen ab Zeile" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.halignment="RIGHT"/>
    <Label text="Ausgabedatei" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.halignment="RIGHT"/>
    <Button text="Browse..." GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
    <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
    <TextField GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
    <TextField GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
    <TextField GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
    <TextField GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
    <Button text="Browse..." GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
    <Button text="Go!" GridPane.rowIndex="8" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
</GridPane>